{
  // ===
  // Spacing
  // ===
  "editor.formatOnSave": true,
  "editor.insertSpaces": true,
  "editor.tabSize": 2,
  "editor.trimAutoWhitespace": true,
  "files.trimTrailingWhitespace": true,
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "editor.detectIndentation": false,

  // ===
  // ESLint
  // ===
  "eslint.enable": true,
  "eslint.validate": ["javascript", "javascriptreact", "vue", "vue-html", "html"],
  "editor.codeActionsOnSave": {
    "source.fixAll": true,
    "source.fixAll.eslint": true
  },

  // ===
  // Files
  // ===
  "search.exclude": {
    "**/node_modules": true,
    "**/*.log": true,
    "**/*.log*": true,
    "**/bower_components": true,
    "**/dist": true,
    "**/elehukouben": true,
    "**/.git": true,
    "**/.gitignore": true,
    "**/.svn": true,
    "**/.DS_Store": true,
    "**/.idea": true,
    "**/.vscode": false,
    "**/yarn.lock": true,
    "**/tmp": true,
    "out": true,
    "dist": true,
    "node_modules": true,
    "CHANGELOG.md": true,
    "examples": true,
    "res": true,
    "screenshots": true,
    "yarn-error.log": true,
    "**/.yarn": true
  },
  "files.exclude": {
    "**/.cache": true,
    "**/.editorconfig": true,
    "**/.eslintcache": true,
    "**/bower_components": true,
    "**/.idea": true,
    "**/tmp": true,
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/*.log": true,
    "**/*.log*": true,
    "**/coverage": true,
    "dist/**": true
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/.vscode/**": true,
    "**/node_modules/**": true,
    "**/tmp/**": true,
    "**/bower_components/**": true,
    "**/dist/**": true,
    "**/yarn.lock": true,
    "**/*.log": true,
    "**/*.log*": true,
    "**/coverage": true,
    "dist/**": true
  },
  "files.associations": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    ".markdownlintrc": "jsonc"
  },
  "path-intellisense.mappings": {
    "@/": "${workspaceRoot}/src"
  },

  // ===
  // HTML
  // ===
  "html.format.enable": false,
  "emmet.triggerExpansionOnTab": true,

  // ===
  // JS(ON)
  // ===
  "javascript.format.enable": false,
  "json.format.enable": false,
  "typescript.format.enable": false,

  // ===
  // CSS
  // ===
  "stylelint.enable": false,
  "stylelint.validate": ["css", "less", "postcss", "scss", "vue", "sass"],
  "css.validate": false,
  "scss.validate": false,

  // ===
  // MARKDOWN
  // ===
  "[markdown]": {},
  // ===
  // Editor
  // ===
  "editor.tabCompletion": "onlySnippets",
  "editor.snippetSuggestions": "top",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  // ===
  // Vite
  // ===
  "vite.autoStart": false,
  "vite.browserType": "system",
  "vite.https": true,
  "vite.showTerminal": true,
  // ===
  // Quasar
  // ===
  "typescript.tsdk": "node_modules/typescript/lib",
  // ===
  // Formatters
  // ===
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[less]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[vue]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true,
      "source.fixAll.stylelint": false
    }
  }
}
